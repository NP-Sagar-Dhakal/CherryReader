<resources>

    <style name="Feed_Theme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/primary_background</item>
        <item name="android:windowBackground">?attr/colorBackground</item>
        <item name="android:itemBackground">@color/primary_background</item>
        <item name="colorReadState">@color/read_state_light</item>
        <item name="colorColoredReadState">@color/colored_read_state_light</item>
        <item name="colorQuoteBackground">@color/quote_background_light</item>
        <item name="colorQuoteLeft">@color/quote_left_light</item>
        <item name="colorArticleText">@color/feed_text</item>
        <item name="colorSubtitle">@color/grey_sub_title</item>
        <item name="colorSubtitleBorder">@color/primary_background</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="colorUnreadBadgeBackground">@color/colorAccent</item>
        <item name="colorUnreadBadgeText">@color/white_text</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.DayNight</item>
    </style>

    <style name="Feed_Theme.ActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.DayNight</item>
    </style>

    <style name="Feed_Theme.ActionBar.Details" parent="Feed_Theme.ActionBar" />

    <style name="Feed_Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
